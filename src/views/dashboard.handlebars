 <!-- ACCOUNT MODAL -->
 <div id="modal-account" class="modal fade">
     <div class="modal-dialog">
     <div class="modal-content">
      <div class="modal-header"><h3>Account details</h3></div>
      <div class="modal-body">
          name: {{ user.dataValues.name }} {{ user.dataValues.surname }} <br>
          email: {{ user.dataValues.email }} <br>
          username: {{ user.dataValues.username }}
          </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
    </div>
 </div>

<h3 id="welcomeMessage">Welcome {{ user.dataValues.name}} </h3>

<form action="/registration" method="POST">

<div class="input-group mb-3">
<select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
  <option selected>Choose an area of expertise</option>
  <option value="1">One</option>
  <option value="2">Two</option>
  <option value="3">Three</option>
</select>
</div>

<div class="input-group mb-3">
<select class="form-select form-select-lg mb-3" aria-label="size 3 select example">
  <option selected>Specify years of experience </option>
 {{#list}}
 {{/list}}
</select>
</div>


<button type="submit" class="btn btn-primary">Add</button>
<a href="/" class="btn btn-success">Done</a>
</form>
