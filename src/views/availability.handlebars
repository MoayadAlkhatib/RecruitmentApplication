<h4>Specify the availability periods.</h4>
{{#with response}}
<div class="alert alert-success">
    <p>Added availability period from {{from_date}}
         to {{to_date}}</p>
    </div>
{{/with}}

<form action="/availability" method="POST" enctype="application/json">
<div class="form-group row">
  <label for="example-date-input" class="col-2 col-form-label"
   id="welcomeMessage">From:</label>
  <div class="col-10">
    <input name="from_date" class="form-control" type="date" value="2021-04-01" id="example-date-input">
  </div>
</div>

<div class="form-group row">
  <label for="example-date-input" class="col-2 col-form-label"
   id="welcomeMessage">To:</label>
  <div class="col-10">
    <input name="to_date" class="form-control" type="date" value="2021-09-01" id="example-date-input">
  </div>
</div>
<button type="submit" class="btn btn-primary">Add</button>
</form>